<% @comments.each do |comment| %>
  <%= comment.description %><br>
  <% if comment.user == current_user %>
    <%= link_to "Edit Comment", edit_image_comment_path(@image, comment), class:"small button" %>
    <%= link_to "Delete Comment", image_path(@image, comment), method: :delete,
    data: { confirm: "Are you sure?" }, class:"small button" %>
  <% elsif current_user == nil %>
  <% end %><br><br>
<% end %>
