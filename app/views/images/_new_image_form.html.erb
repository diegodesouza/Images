<%= form_for @image do |f| %>
<div class="field">
  <%= f.label :title %>
  <%= f.text_field :title %>
</div>
<div class="field">
  <%= f.label :description %>
  <%= f.text_area :description %>
</div>
<div class="field">
  <%= f.label :photo %>
  <%= f.file_field :photo %>
</div>
<div class="actions">
  <%= f.submit "Create", class:"button", method: :post %>
</div>
<% end %>
